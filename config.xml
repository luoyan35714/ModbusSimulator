<modbusSimulator>

	<!-- MODBUS_RTU, MODBUS_ASCII, MODBUS_TCP -->
	<protocolType>MODBUS_RTU</protocolType>

	<serialConnection>
		<comPort>COM9</comPort>
		<!-- 300, 600, 1200, 2400, 4800, 9600, 14400, 19200, 38400, 56000, 57600, 115200 -->
		<baudrate>9600</baudrate>
		<!-- 7, 8 -->
		<dataBits>8</dataBits>
		<!-- 1, 2 -->
		<stopBits>1</stopBits>
		<!-- NONE, ODD, EVEN -->
		<parity>EVEN</parity>
	</serialConnection>
	
	<modbusDataDefinition>
		<!-- [1, 255] -->
		<slaveId>1</slaveId>
		<!-- 01, 02, 03, 04 -->
		<functionCode>03</functionCode>
		<!-- [0, 65535] -->
		<address>0</address>
		<!-- [0, 4096] -->
		<quality>6</quality>
		<!-- true, false -->
		<return06Exception>false</return06Exception>
	</modbusDataDefinition>

