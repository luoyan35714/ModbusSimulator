<?xml version="1.0" encoding="UTF-8"?>
<modbusSimulator>

	<!-- MODBUS_RTU, MODBUS_ASCII, MODBUS_TCP -->
	<protocolType>MODBUS_TCP</protocolType>

	<serialConnection>
		<comPort>COM1 1</comPort>
		<!-- 300, 600, 1200, 2400, 4800, 9600, 14400, 19200, 38400, 56000, 57600, 
			115200 -->
		<baudrate>300</baudrate>
		<!-- 5, 6, 7, 8 -->
		<dataBits>7</dataBits>
		<!-- 1, 2, 3 -->
		<stopBits>2</stopBits>
		<!-- NONE, ODD, EVEN, MARK, SPACE -->
		<parity>NONE</parity>
	</serialConnection>

	<tcpConnection>
		<port>8888</port>
	</tcpConnection>

	<modbusDataDefinition>
		<!-- [0, 255] -->
		<slaveId>0</slaveId>
		<!-- 01, 02, 03, 04 -->
		<functionCode>01</functionCode>
		<!-- [0, 65535] -->
		<address>0</address>
		<!-- [0, 4096] -->
		<quality>10</quality>
		<!-- true, false -->
		<return06Exception>false</return06Exception>
	</modbusDataDefinition>

	<modbusDataList>
		<modbusData>
			<!-- true, false -->
			<autoChange>false</autoChange>
			<!-- on, off -->
			<statusValue>off</statusValue>

			<!-- true, false -->
			<random>false</random>
			<!-- true, false -->
			<autoIncrement>false</autoIncrement>
			<value>0</value>
		</modbusData>
		<modbusData>
			<!-- true, false -->
			<autoChange>false</autoChange>
			<!-- on, off -->
			<statusValue>on</statusValue>

			<random>false</random>
			<autoIncrement>false</autoIncrement>
			<!-- [-32768, 32767] -->
			<value>0</value>
		</modbusData>
	</modbusDataList>

</modbusSimulator>